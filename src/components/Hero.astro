---
const personalImageAlt = 'Sergio Aguado'
import CvPill from '@/components/pills/CvPill.astro'
import ConnectPill from '@/components/pills/ConnectPill.astro'
import EmailPill from '@/components/pills/EmailPill.astro'

import { useTranslations } from '@/i18n/utils'
import { languageList } from '@/i18n/ui'

const currentLang = Astro.currentLocale || 'es'

const translateLabels = useTranslations(currentLang as keyof typeof languageList)
---

<div class='max-w-6xl mx-auto'>
  <div class='flex gap-4 mb-4 flex-col items-center sm:flex-row sm:items-start'>
    <img
      class='rounded-full border-4 border-text-1 size-40 min-w-40 object-cover'
      src='/yo.webp'
      alt={personalImageAlt}
    />
    <div class='text-center sm:text-left'>
      <h1 class='text-3xl font-bold tracking-tight sm:text-4xl text-white'>
        {translateLabels('hero.fullName')}
      </h1>
      <p
        class='mt-3 text-xl [&>strong]:text-white [&>strong]:font-semibold text-gray-300'
      >
        {translateLabels('hero.description')}
      </p>
      <nav class='flex flex-wrap gap-4 mt-3 justify-center sm:justify-start'>
        <ConnectPill />
        <EmailPill />
        <CvPill />
      </nav>
    </div>
  </div>
</div>
